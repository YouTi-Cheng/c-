#include<iostream>
#include<easyx.h>
using namespace std;
#include<string>

int main()
{
	//创建一个空的字符串
	string s1;
	//用字符串s初始化
	const char* str = "我是个天才";
	string s2(str);

	//使用一个string对象初始化另一个string对象
	string s3(s2);

	//使用n个字符c初始化
	string s4(5, 'a');

	cout << "s2 = " << s2 << endl;
	cout << "s3 = " << s3 << endl;
	cout << "s4 = " << s4 << endl;

	system("pause");
	return 0;

}
